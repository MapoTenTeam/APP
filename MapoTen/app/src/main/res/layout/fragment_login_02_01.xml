<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.Login_02_01">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_40"
        android:layout_marginEnd="@dimen/margin_40"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_40"
            android:contentDescription="@string/sign_up_description"
            android:src="@drawable/ic_account_sign_up" />

        <TextView
            android:id="@+id/tv_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_50"
            android:text="@string/signUp_personal"
            android:textSize="@dimen/text_20"
            android:textStyle="bold" />


        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:isScrollContainer="false"
            app:boxCornerRadiusBottomEnd="@dimen/size_30"
            app:boxCornerRadiusBottomStart="@dimen/size_30"
            app:boxCornerRadiusTopEnd="@dimen/size_30"
            app:boxCornerRadiusTopStart="@dimen/size_30"
            app:errorEnabled="true"
            app:expandedHintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_edit_text"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/name"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="false"
            app:boxCornerRadiusBottomEnd="@dimen/size_30"
            app:boxCornerRadiusBottomStart="@dimen/size_30"
            app:boxCornerRadiusTopEnd="@dimen/size_30"
            app:boxCornerRadiusTopStart="@dimen/size_30"
            app:errorEnabled="true"
            app:expandedHintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/id_edit_text"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/id"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_id_double_check"
            style="@style/btnStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60"
            android:text="@string/double_check" />


        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:isScrollContainer="false"
            app:boxBackgroundMode="outline"
            app:errorEnabled="true"
            app:expandedHintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_edit_text"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/email"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_email_double_check"
                style="@style/btnStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_60"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_weight="1"
                android:backgroundTint="@color/main_skyBlue"
                android:text="@string/double_check" />

            <Button
                android:id="@+id/btn_authentication_request"
                style="@style/btnStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_60"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_weight="1"
                android:text="@string/authentication_request"
                app:cornerRadius="@dimen/size_30" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:isScrollContainer="false"
            app:boxBackgroundMode="outline"
            app:errorEnabled="true"
            app:expandedHintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/authentication_number_edit_text"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/authentication_number"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_confirm"
            style="@style/btnStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60"
            android:text="@string/confirm" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:isScrollContainer="false"
            app:boxBackgroundMode="outline"
            app:errorEnabled="true"
            app:expandedHintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pwd_edit_text"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/passWord"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:isScrollContainer="false"
            app:boxBackgroundMode="outline"
            app:errorEnabled="true"
            app:expandedHintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pwd_confirm_edit_text"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/pwd_confirm"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tos_stroke"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_14"
            android:paddingTop="@dimen/padding_20"
            android:paddingEnd="@dimen/padding_14"
            android:paddingBottom="@dimen/padding_20">


            <CheckBox
                android:id="@+id/all_checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/all_check_tos"
                android:textColor="@color/text_darkGrey"
                android:textSize="@dimen/text_18"
                android:textStyle="bold"
                android:buttonTint="@color/text_middleGrey"


                />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/text_lightGrey" />

            <TextView
                android:id="@+id/tv_tos_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_6"
                android:layout_marginTop="@dimen/margin_24"
                android:text="@string/tos"
                android:textColor="@color/text_darkGrey"
                android:textSize="@dimen/text_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/tv_tos1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="[필수] 마포잡 서비스 이용약관"
                    android:textColor="@color/text_darkGrey"
                    android:textSize="@dimen/text_14"
                    android:buttonTint="@color/text_middleGrey"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/margin_6"
                    android:gravity="center"
                    android:text="@string/tos_look"
                    android:textColor="@color/text_darkGrey"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/tv_tos2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[필수] 개인정보 수집 및 이용약관"
                    android:textColor="@color/text_darkGrey"
                    android:textSize="@dimen/text_14"
                    android:buttonTint="@color/text_middleGrey"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/margin_6"
                    android:gravity="center"
                    android:text="@string/tos_look"
                    android:textColor="@color/text_darkGrey"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/tv_tos3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[선택] 프로필 정보 추가 수집 동의"
                    android:textColor="@color/text_darkGrey"
                    android:textSize="@dimen/text_14"
                    android:buttonTint="@color/text_middleGrey"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/margin_6"
                    android:gravity="center"
                    android:text="@string/tos_look"
                    android:textColor="@color/text_darkGrey"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/tv_tos4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[선택] 광고성 정보 수신 동의"
                    android:textColor="@color/text_darkGrey"
                    android:textSize="@dimen/text_14"
                    android:buttonTint="@color/text_middleGrey"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/margin_6"
                    android:gravity="center"
                    android:text="@string/tos_look"
                    android:textColor="@color/text_darkGrey"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</ScrollView>