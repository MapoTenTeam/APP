<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_32"
    android:background="@drawable/bg_employment_job_posting_row"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_20">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/companyImage"
            android:layout_width="match_parent"
            android:layout_height="234dp"
            android:layout_margin="@dimen/size_1"
            android:src="@drawable/employment_test_img" />

        <!--<ToggleButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:background="@drawable/bg_toggle_btn"
            android:textOff=""
            android:textOn="" />-->

        <LinearLayout
            android:id="@+id/closedPosting"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_closed_posting">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:rotation="-15"
                android:text="마감된 공고"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_20"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_12"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_20">

        <TextView
            android:id="@+id/careerType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            android:background="@drawable/bg_job_posting_category_career"
            android:paddingHorizontal="@dimen/padding_8"
            android:paddingVertical="@dimen/padding_2"
            android:text="경력"
            android:textColor="@color/main_skyBlue"
            android:textSize="@dimen/text_12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jobType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            android:background="@drawable/bg_job_posting_category_job"
            android:paddingHorizontal="@dimen/padding_8"
            android:paddingVertical="@dimen/padding_2"
            android:text="기획"
            android:textColor="#FF50B9"
            android:textSize="@dimen/text_12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            android:background="@drawable/bg_job_posting_category_place"
            android:paddingHorizontal="@dimen/padding_8"
            android:paddingVertical="@dimen/padding_2"
            android:text="공덕동"
            android:textColor="#279725"
            android:textSize="@dimen/text_12"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/postingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_12"
        android:paddingHorizontal="@dimen/padding_20"
        android:text="마포구 지역사회 보장 담당자 구인"
        android:textSize="@dimen/text_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/CompanyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_20"
        android:text="마포구청"
        android:textColor="@color/text_middleGrey"
        android:textSize="@dimen/text_14"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingHorizontal="@dimen/padding_20"
            android:text="지원마감"
            android:textSize="@dimen/text_12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_weight="3"
            android:drawablePadding="@dimen/padding_4"
            android:gravity="bottom|right"
            android:text="D-Day"
            android:textColor="@color/main_skyBlue"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>