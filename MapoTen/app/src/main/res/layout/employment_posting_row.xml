<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/bg_employment_job_posting_row"
    android:layout_marginBottom="@dimen/margin_32"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:src="@drawable/employment_test_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            android:background="@drawable/bg_job_posting_category"
            android:paddingHorizontal="@dimen/padding_8"
            android:paddingVertical="@dimen/padding_2"
            android:text="기획"
            android:textColor="@color/main_skyBlue"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            android:background="@drawable/bg_job_posting_category"
            android:paddingHorizontal="@dimen/padding_8"
            android:paddingVertical="@dimen/padding_2"
            android:text="기획"
            android:textColor="@color/main_skyBlue"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            android:background="@drawable/bg_job_posting_category"
            android:paddingHorizontal="@dimen/padding_8"
            android:paddingVertical="@dimen/padding_2"
            android:text="기획"
            android:textColor="@color/main_skyBlue"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/postingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_12"
        android:text="마포구 지역사회 보장 담당자 구인"
        android:textSize="@dimen/text_18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/CompanyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:text="마포구청"
        android:textSize="@dimen/text_16"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/registrationDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:drawableLeft="@drawable/ic_calendar_16"
        android:drawablePadding="@dimen/padding_4"
        android:gravity="bottom"
        android:text="2021년 09월 18일 금요일"
        android:textSize="@dimen/text_10"
        android:textStyle="bold" />

</LinearLayout>