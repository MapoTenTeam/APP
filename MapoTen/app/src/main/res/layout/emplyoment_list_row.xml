<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RowStyle"
    android:layout_width="match_parent"
    android:layout_height="108dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/category"
            style="@style/Row.CategoryStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="일반채용 정규직" />

        <TextView
            android:id="@+id/state"
            style="@style/Row.StateStyle"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:paddingHorizontal="4dp"
            android:text="승인 심사중" />
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        style="@style/Row.TitleStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="마포구 영영사 구인" />

    <TextView
        android:id="@+id/registrationDate"
        style="@style/Row.RegistrationDateStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="작성일: 2021년 08월 31일 19시24분" />
</LinearLayout>