<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.BusinessAccount_01_04">

    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_56"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/backButton"
            style="@style/BackButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_16"
            android:text="@string/business_employment_detail_action_bar_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="#50c4c4c4" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/margin_32"
        android:layout_marginTop="@dimen/margin_90"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/category"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:lineSpacingExtra="@dimen/size_6"
                    android:text="@string/business_employment_detail_category_text"
                    android:textSize="@dimen/text_10" />

                <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_16"
                    android:background="@drawable/bg_employment_detail_state"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/size_6"
                    android:paddingHorizontal="@dimen/margin_4"
                    android:text="@string/business_employment_state_text"
                    android:textAlignment="center"
                    android:textColor="#FFA31A"
                    android:textSize="@dimen/text_10"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginBottom="@dimen/margin_16"
                android:text="@string/business_employment_title"
                android:textColor="#474747"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="234dp"
                android:layout_marginBottom="@dimen/margin_16"
                android:background="#50c4c4c4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_4"
                android:text="@string/business_employment_content_title1"
                android:textColor="#474747"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:layout_marginBottom="@dimen/margin_8"
                android:background="#10000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_4"
                android:text="@string/business_employment_content_title2"
                android:textColor="#474747"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="사업체명"
                        android:textColor="@color/text_middleGrey"
                        android:textSize="@dimen/text_12"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nameValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/text_darkGrey"
                        android:textSize="@dimen/text_12"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bizrNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="사업자 등록번호"
                        android:textColor="@color/text_middleGrey"
                        android:textSize="@dimen/text_12"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bizrNoValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/text_darkGrey"
                        android:textSize="@dimen/text_12"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ceo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="대표자"
                        android:textColor="@color/text_middleGrey"
                        android:textSize="@dimen/text_12"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ceoValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/text_darkGrey"
                        android:textSize="@dimen/text_12"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="소재지"
                        android:textColor="@color/text_middleGrey"
                        android:textSize="@dimen/text_12"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/addressValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/text_darkGrey"
                        android:textSize="@dimen/text_12"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="업종"
                        android:textColor="@color/text_middleGrey"
                        android:textSize="@dimen/text_12"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sectorValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/text_darkGrey"
                        android:textSize="@dimen/text_12"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/quaternion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="근로자 수"
                        android:textColor="@color/text_middleGrey"
                        android:textSize="@dimen/text_12"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/quaternionValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/text_darkGrey"
                        android:textSize="@dimen/text_12"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:layout_marginBottom="@dimen/margin_8"
                android:background="#10000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_4"
                android:text="@string/business_employment_content_title3"
                android:textColor="#474747"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:layout_marginBottom="@dimen/margin_8"
                android:background="#10000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_4"
                android:text="@string/business_employment_content_title4"
                android:textColor="#474747"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:layout_marginBottom="@dimen/margin_8"
                android:background="#10000000" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>