<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/input_stroke_radius30">

        <ImageView
            android:id="@+id/employment_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/mapo_logo"
            android:padding="@dimen/text_20"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_skyBlue"/>

        <TextView
            android:id="@+id/employment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="영상콘텐츠 기획 제작 담당자 채용"
            android:textStyle="bold"
            android:textSize="@dimen/text_14"
            android:padding="@dimen/text_10"/>

        <TextView
            android:id="@+id/employment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="마포구청"
            android:padding="@dimen/text_10"/>

    </LinearLayout>

</LinearLayout>