<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MapoTen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>


    <!-- TextInputLayout -->
    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/main_skyBlue</item>
    </style>

    <style name="TextInputTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/main_skyBlue</item>
        <item name="boxStrokeColor">@color/main_skyBlue</item>
        <item name="android:textCursorDrawable">@color/main_skyBlue</item>
        <item name="hintTextColor">@color/main_skyBlue</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="boxCornerRadiusTopStart">@dimen/size_30</item>
        <item name="boxCornerRadiusTopEnd">@dimen/size_30</item>
        <item name="boxCornerRadiusBottomStart">@dimen/size_30</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/size_30</item>
        <item name="boxBackgroundColor">@color/main_skyBlue</item>
    </style>
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingStart">30dp</item>
    </style>

    <!-- Button -->
    <style name="btnStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/main_skyBlue</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="cornerRadius">@dimen/size_30</item>
    </style>

</resources>
