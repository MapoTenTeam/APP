<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginTop">@dimen/margin_28</item>
        <item name="android:background">@drawable/bg_password_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/button_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/button_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/button_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/button_radius</item>
        <item name="boxStrokeColor">@color/main_skyBlue</item>
        <item name="expandedHintEnabled">false</item>
        <item name="hintTextColor">@color/main_skyBlue</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/button_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/button_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/button_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/button_radius</item>
        <item name="boxStrokeColor">@color/main_skyBlue</item>
        <item name="expandedHintEnabled">false</item>
        <item name="hintTextColor">@color/main_skyBlue</item>
    </style>
    <style name="PasswordTextInputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">@dimen/margin_4</item>
        <item name="android:inputType">textPassword</item>
        <item name="paddingStart">@dimen/padding_14</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/text_lightGrey</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    <!-- 채용공고목록 -->

    <style name="BackButtonStyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_arrow_back_16</item>
        <item name="android:textColor">@color/text_darkBlue</item>
        <item name="drawableTint">@color/text_darkBlue</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StateRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:background">@drawable/bg_radio_button</item>
        <item name="android:button">@null</item>
        <item name="android:buttonTint">@color/main_skyBlue</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@drawable/radio_button_text_color</item>
        <item name="android:drawableLeft">@drawable/ic_radio_button_check</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 채용공고목록 row -->
    <style name="RowStyle" parent="android:TextAppearance">
        <item name="android:background">@drawable/bg_employment</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/padding_12</item>
        <item name="android:paddingEnd">@dimen/padding_8</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
    </style>

    <style name="Row.CategoryStyle" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:gravity">bottom</item>
        <item name="lineSpacing">6sp</item>
        <item name="android:textColor">@color/text_darkGrey</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="Row.StateStyle" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/text_darkGrey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/bg_employment_state</item>
    </style>
    <style name="Row.TitleStyle" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/text_darkGrey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="Row.RegistrationDateStyle" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:textColor">@color/text_darkGrey</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
    </style>
</resources>